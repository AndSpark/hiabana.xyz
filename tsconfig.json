{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"inlineSourceMap": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"stripInternal": true,
		"skipLibCheck": true,
		"pretty": true,
		"declaration": true,
		"outDir": "dist",
		"jsx": "preserve",
		"typeRoots": ["./typings", "./node_modules/@types"],
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	},
	"include": ["src"]
}
